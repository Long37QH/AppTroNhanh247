<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="fragments.AddPhongFragment"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/anhphong2"
        android:scaleType="centerCrop"
        android:layout_marginBottom="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Phòng:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_sophong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#857E7E"
            android:hint="Nhập số phòng"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diện tích:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_dientich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#857E7E"
            android:hint="Diện tích phòng m2"
            android:text=""
            android:layout_marginLeft="24dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gía phòng:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_giaphong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#857E7E"
            android:hint="Gía phòng vnd"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gía điện:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_giadien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#857E7E"
            android:hint="Gía điện vnd/kw"
            android:text=""
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gía nước:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edit_gianuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#857E7E"
            android:hint="Gía nước vnd/m3"
            android:text=""
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="Thêm Phòng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F26522"/>


</LinearLayout>